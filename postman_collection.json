          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"start\": \"Los Angeles, CA\",\n  \"end\": \"San Francisco, CA\"\n}"
        },
        "url": {
          "raw": "http://localhost:8000/api/optimize",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "optimize"]
        },
