    },
    {
      "name": "Optimize Route - LA to SF (Cached)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"start\": \"Los Angeles, CA\",\n  \"end\": \"San Francisco, CA\"\n}"
        },
        "url": {
          "raw": "http://localhost:8000/api/optimize",
